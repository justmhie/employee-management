<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Salary List</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/addSalary" class="btn btn-sm btn-outline-secondary">+ New Payroll</a>
    </div>
  </div>
</div>
  
  <!-- Salary table -->
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Employee Name</th>
          <th scope="col">Salary</th>
          <th scope="col">Payroll Date</th>
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        <% salaries.forEach(salary => { %>
          <tr>
            <td><%= salary.employeeName %></td>
            <td><%= salary.salary %></td>
            <td><%= salary.payrollDate %></td>
            <td class="text-end">
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/salary/view/<%= salary._id %>" class="btn btn-primary btn-small"><i class="bi bi-eye"></i></a>
                <a href="/salary/edit/<%= salary._id %>" class="btn btn-warning btn-small"><i class="bi bi-pencil"></i></a>
                <form action="/salary/edit/<%= salary._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i></button>
                </form>
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>