<!-- leave.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leave Information</title>
</head>

<body>
  <h1>Leave Information</h1>

  <table>
    <thead>
      <tr>
        <th>Employee Name</th>
        <th>Superior Name</th>
        <th>Leave Type</th>
        <th>Leave Status</th>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
    </thead>
    <tbody>
      <% leaveRequests.forEach(leave => { %>
      <tr>
        <td><%= leave.employeeId %></td>
        <td><%= leave.superiorId %></td>
        <td><%= leave.leaveType %></td>
        <td><%= leave.leaveStatus %></td>
        <td><%= leave.startDate %></td>
        <td><%= leave.endDate %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>

</html>
