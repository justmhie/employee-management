<form action="/leave" method="POST">
  <br>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="employeeId">Employee Name</label>
      <select class="form-control" id="employeeId" name="employeeId">
        <option value="">Select Employee</option>
        <!-- Loop through customers to populate employee options -->
        <% customers.forEach(customer => { %>
          <option value="<%= customer._id %>"><%= customer.firstName %> <%= customer.lastName %></option>
        <% }) %>
      </select>
    </div>   

    <div class="col">
      <label for="startDate">Start Leave</label>
      <input type="date" class="form-control" id="startDate" name="startDate" value="">
    </div>

    <div class="col">
      <label for="endDate">End Leave</label>
      <input type="date" class="form-control" id="endDate" name="endDate" value="">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <br>
      <label for="leaveType">Leave Type</label>
      <select class="form-control" id="leaveType" name="leaveType">
        <option value="">Select Leave Type</option>
        <option value="Vacation">Vacation</option>
        <option value="Sick">Sick</option>
        <option value="Maternity">Maternity</option>
        <option value="Paternity">Paternity</option>
        <!-- Add more options as needed -->
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="leaveStatus">Status</label>
      <select class="form-control" id="leaveStatus" name="leaveStatus">
        <option value="">Select Leave Status</option>
        <option value="Approved">Approved</option>
        <option value="Rejected">Rejected</option>
        <option value="Pending">Pending</option>
        <!-- Add more options as needed -->
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="superior">Superior</label>
      <select class="form-control" id="superior" name="superior">
        <option value="">Select Superior</option>
        <!-- Loop through manager superiors to populate superior options -->
        <% managerSuperiors.forEach(manager => { %>
          <option value="<%= manager._id %>"><%= manager.firstName %> <%= manager.lastName %></option>
        <% }) %>
      </select>
    </div>
  </div>
  

  <div class="form-group mb-4">
    <br>
    <button type="submit" class="btn btn-primary">Done</button>
  </div>
</form>